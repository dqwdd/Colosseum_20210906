<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/childSideAndNicknameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(진영) 사용자닉네임"/>

        <TextView
            android:id="@+id/childContentTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글 내용"
            android:layout_marginTop="5dp"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/childLikeCountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_border_box"
                android:padding="10dp"
                android:text="좋아요 ?개"/>

            <TextView
                android:id="@+id/childHateCountTxt"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border_box"
                android:padding="10dp"
                android:text="싫어요 ?개"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>